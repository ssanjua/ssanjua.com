---
import LinkInline from "./LinkInline.astro";
import GoIcon from "./icons/GoIcon.astro";

export interface Props {
  title: string;
  school: string;
  description: string;
  link?: string;
  date: string;
  logo: string;
}
const { title, school, description, link, date, logo } = Astro.props;
---

<div class="flex flex-col gap-2 border">
  <div class="grid grid-cols-3 items-start">
    <img src={logo} alt={`${school} logo`} class="rounded-full size-16" />
    <div class="col-span-2 flex flex-col justify-start">
      <time class="">{date}</time>
       <h3 class="font-bold text-xl">
    {title}
  </h3>
    </div>
  </div>
  <h4 class="">{school}</h4>
  <p class="text-gray-200">{description}</p>
  <LinkInline href={link}> Certificate </LinkInline>
</div>
