---
import ProfileGif from "./ProfileGif.astro";
import SectionContainer from "./SectionContainer.astro";
import SocialContact from "./SocialContact.astro";
import GitHubIcon from "./icons/GitHubIcon.astro";
import InstagramIcon from "./icons/InstagramIcon.astro";
import LinkedinIcon from "./icons/LinkedinIcon.astro";
import XIcon from "./icons/XIcon.astro";

import { getI18N } from "../i18n";
import CvButton from "./buttons/CvButton.astro";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<div class="flex justify-center flex-row gap-4 md:gap-6">
  <div class="hidden lg:block">
    <ProfileGif class="max-w-[220px] mt-14" />
  </div>
  <div class="flex flex-col">
    <p>
      <span class="text-pink font-bold text-xl">PAU PALLARES</span> aka
    </p>
    <div class="flex flex-col sm:flex-row my-4 md:items-center gap-y-2">
      <h1
        id="ssanjua"
        class="ss-title text-5xl md:text-6xl font-bold flex transition-colors"
      >
        SSANJUA
      </h1>
      <a
        href="https://linkedin.com/in/paupallares"
        target="_blank"
        rel="nonopener"
        class="flex text-lg font-bold ml-0 sm:ml-4"
      >
        <span
          class="border p-2 text-base custom-shadow-pink border-yellow hover:bg-background-dark hover:text-white bg-background-light dark:hover:bg-background-light dark:bg-background-dark dark:hover:text-background-dark transition duration-300 ease-in-out hover:scale-105"
          >FULL STACK DEVELOPER</span
        >
      </a>
    </div>
    <h2 class="descripcion-text max-w-[800px] text-pretty">
      <span
        class="font-bold text-base hover:text-yellow dark:hover:text-yellow dark:font-semibold dark:text-gray-200"
        >{i18n.HERO.HELLO}</span
      >
      <span class="dark:font">{i18n.HERO.DESCRIPTION1}</span>
      <span
        class="font-bold dark:text-gray-200 hover:text-yellow dark:font-semibold text-base"
        >{i18n.HERO.TECH}</span
      >
      <span class="dark:font">{i18n.HERO.PROJ}</span>
      <span class="dark:text-gray-200 font-bold dark:font-semibold"
        >{i18n.HERO.PROJNAMES}</span
      >
      <span class="dark:font">{i18n.HERO.PROJEXPLAIN}</span>
      <span class="dark:text-gray-200 font-bold dark:font-semibold"
        >{i18n.HERO.SKILLS}</span
      >
    </h2>
    <div
      class="hidden lg:flex font-bold justify-start items-center gap-6 mt-10"
    >
      <div class="flex text-white bg-pink custom-shadow-yellow font-bold">
        <CvButton />
      </div>
      <a
        class="transition duration-300 ease-in-out hover:scale-105"
        href="mailto:ejemplo@dominio.com"
      >
        <span
          class="py-3 px-5 dark:bg-white custom-shadow-pink text-white bg-lightgray dark:text-black"
        >
          EMAIL
        </span></a
      >
      <nav class="flex gap-x-1 dark:text-white">
        <a
          aria-label="button"
          class="flex hover:bg-orange hover:text-white justify-center items-center transition-all duration-300 ease-in-out hover:scale-105 size-10"
          href="https://github.com/ssanjua"
          target="_blank"
          rel="nonopener noreferrer"
        >
          <GitHubIcon class="size-7" />
        </a>
        <a
          aria-label="button"
          class="flex hover:bg-blue justify-center hover:text-white items-center transition-all duration-300 ease-in-out hover:scale-105 size-10"
          href="https://www.linkedin.com/in/paupallares/"
          target="_blank"
          rel="nonopener noreferrer"
        >
          <LinkedinIcon class="size-7" />
        </a>
        <a
          aria-label="button"
          class="flex hover:bg-green justify-center hover:text-white items-center transition-all duration-300 ease-in-out hover:scale-105 size-10"
          href="https://twitter.com/pupipallares"
          target="_blank"
          rel="nonopener noreferrer"
        >
          <XIcon class="size-7" />
        </a>
        <a
          aria-label="button"
          class="flex hover:bg-red justify-center items-center hover:text-white transition-all duration-300 ease-in-out hover:scale-105 size-10"
          href="https://www.instagram.com/ppupipallares/s"
          target="_blank"
          rel="nonopener noreferrer"
        >
          <InstagramIcon class="size-7" />
        </a>
      </nav>
    </div>
  </div>
</div>

<div class="flex justify-center items-center lg:hidden mt-10">
  <ProfileGif class="max-w-[120px]" />
  <div>
    <div class="flex gap-6 m-8 justify-center items-center">
      <div class="text-white bg-pink custom-shadow-yellow font-bold">
        <CvButton />
      </div>
      <div class="font-bold items-center">
        <a
          class="transition duration-300 ease-in-out hover:scale-105"
          href="mailto:ejemplo@dominio.com"
        >
          <span
            class="py-3 px-5 dark:bg-white custom-shadow-pink text-white bg-lightgray dark:text-black"
          >
            EMAIL
          </span></a
        >
      </div>
    </div>
    <nav class="flex m-8 dark:text-white">
      <a
        aria-label="button"
        class="flex hover:bg-orange hover:text-white justify-center items-center transition-all duration-300 ease-in-out hover:scale-105 size-10"
        href="https://github.com/ssanjua"
        target="_blank"
        rel="nonopener noreferrer"
      >
        <GitHubIcon class="size-7" />
      </a>
      <a
        aria-label="button"
        class="flex hover:bg-blue justify-center hover:text-white items-center transition-all duration-300 ease-in-out hover:scale-105 size-10"
        href="https://www.linkedin.com/in/paupallares/"
        target="_blank"
        rel="nonopener noreferrer"
      >
        <LinkedinIcon class="size-7" />
      </a>
      <a
        aria-label="button"
        class="flex hover:bg-green justify-center hover:text-white items-center transition-all duration-300 ease-in-out hover:scale-105 size-10"
        href="https://twitter.com/pupipallares"
        target="_blank"
        rel="nonopener noreferrer"
      >
        <XIcon class="size-7" />
      </a>
      <a
        aria-label="button"
        class="flex hover:bg-red justify-center items-center hover:text-white transition-all duration-300 ease-in-out hover:scale-105 size-10"
        href="https://www.instagram.com/ppupipallares/s"
        target="_blank"
        rel="nonopener noreferrer"
      >
        <InstagramIcon class="size-7" />
      </a>
    </nav>
  </div>
</div>

<script type="module" is:inline>
  const colors = [
    "#0a996f",
    "#0a6789",
    "#cf0638",
    "#fa6632",
    "#fecd23",
    "#E54980",
  ];
  const h3Element = document.getElementById("ssanjua");

  h3Element.addEventListener("mouseover", () => {
    const randomColor = colors[Math.floor(Math.random() * colors.length)];
    h3Element.style.color = randomColor;
  });

  h3Element.addEventListener("mouseout", () => {
    h3Element.style.color = "";
  });
</script>

<style>
  .ss-title {
    font-family: "Press Start 2P", system-ui;
  }
</style>
