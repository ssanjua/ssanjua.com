    logo: "/logos/harvard.webp",
  },
  {
    date: "June 2023 - September 2023",
    school: "Coursera",
    title: "IBM Data Engineer",
    description: "crud | pipelines | ",
    link: "https://www.coursera.org/account/accomplishments/specialization/certificate/5F78DFXU8CRF",
    logo: "/logos/courseralearning_logo.jpeg",
  },
  {
    date: "February 2023 - July 2023",
    school: "SoyHenry",
    title: "Data Science",
    description: "databases | machine learning | python | maths | data analysis",
    link: "https://certificates.soyhenry.com/new-cert?id=a99a7015e911f55e0c11947392b6f03b3ee0180e7d88e5831c53652946a34eef",
