---


<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 ">
  {
    EXPERIENCE.map(({ date, school, title, description, link, logo }) => (
      <div class="flex flex-col gap-2 border-2 border-lightgray dark:border-white custom-shadow-ex bg-light dark:bg-gris p-10">
        <div class="flex justify-start items-center">
          <img
            src={logo}
            alt={`${school} logo`}
            class=" rounded-lg size-14"
          />
          <div class=" ml-4">
            <h4 class="text-xs text-gray-900 dark:text-gray-300 mb-1">{date}</h4>
            <h2 class="font-bold font-xl">{school}</h2>
          </div>
        </div>
        <Line />
        <h3 id="description" class="font-bold text-xl">
          {title}
        </h3>
        <p id="description" class="font-semibold">
          {description}
        </p>
        <a
          href={link}
          role="link"
          target="_blank"
          class="flex justify-center"
        > <span class="border-2 font-bold mt-4 border-lightgray dark:border-white dark:hover:bg-white dark:hover:text-black p-2 custom-shadow-yellow transition-all duration-300 ease-in-out hover:scale-105">
            CERTIFICATE
          </span>
        </a>
      </div>
    ))
  }
</div>
