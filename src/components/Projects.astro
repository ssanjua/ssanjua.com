---
import NextjsIcon from "./icons/NextjsIcon.astro";
import TailwindIcon from "./icons/TailwindIcon.astro";
import ReactIcon from "./icons/ReactIcon.astro";
import JavaScriptIcon from "./icons/JavaScriptIcon.astro";
import NodeJsIcon from "./icons/NodeJsIcon.astro";
import MongoDBIcon from "./icons/MongoDBIcon.astro";
import ZodIcon from "./icons/ZodIcon.astro";
import MySQLIcon from "./icons/MySQLIcon.astro";
import GitHubIcon from "./icons/GitHubIcon.astro";
import LinkButton from "./LinkButton.astro";
import Link from "./icons/Link.astro";
import TypeScriptIcon from "./icons/TypeScriptIcon.astro";
import PythonIcon from "./icons/PythonIcon.astro";
import HTMLIcon from "./icons/HtmlIcon.astro";
import CssIcon from "./icons/CssIcon.astro";
import AstroIcon from "./icons/AstroIcon.astro";

import { getI18N } from "../i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

export const TAGS = {
  NEXT: {
    name: "Next",
    class: "bg-black text-white",
    icon: NextjsIcon,
  },
  TAILWIND: {
    name: "TailwindCSS",
    class: "bg-[#003159] text-white",
    icon: TailwindIcon,
  },
  REACT: {
    name: "React",
    class: "bg-blue text-white",
    icon: ReactIcon,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-yellowsm text-white",
    icon: JavaScriptIcon,
  },
  NODE: {
    name: "Node",
    class: "bg-emerald-800 text-white",
    icon: NodeJsIcon,
  },
  MONGODB: {
    name: "MongoDB",
    class: "bg-lime-700 text-white",
    icon: MongoDBIcon,
  },
  ZOD: {
    name: "Zod",
    class: "bg-cyan-600 text-white",
    icon: ZodIcon,
  },
  SQL: {
    name: "PostgreSQL",
    class: "bg-indigo-700 text-white",
    icon: MySQLIcon,
  },
  TYPESCRIPT: {
    name: "TypeScript",
    class: "bg-sky-600 text-white",
    icon: TypeScriptIcon,
  },
  PYTHON: {
    name: "Phyton",
    class: "bg-amber-700 text-white",
    icon: PythonIcon,
  },
  HTML: {
    name: "HTML",
    class: "bg-orange text-white",
    icon: HTMLIcon,
  },
  CSS: {
    name: "CSS",
    class: "bg-blue text-white",
    icon: CssIcon,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-red text-white",
    icon: AstroIcon,
  },
};

type ProjectKey = "bookeando" | "yarcoDelivery" | "filmmaker" | "harveysApp";

const PROJECTS = [
  {
    title: "bookeando",
    key: "bookeando",
    link: "https://bookeando.onrender.com/",
    github: "https://github.com/ssanjua/booking-web",
    image: "/projects/bookeando.webp",
    tags: [TAGS.REACT, TAGS.TYPESCRIPT, TAGS.NODE, TAGS.TAILWIND, TAGS.MONGODB],
    color: "bg-pink",
  },
  {
    title: "YarcoDelivery",
    key: "yarcoDelivery",
    link: "https://sanjuan-delivery-app-frontend.onrender.com/",
    github: "https://github.com/ssanjua/sanjuan-delivery-app",
    image: "/projects/yarco.webp",
    tags: [TAGS.REACT, TAGS.TYPESCRIPT, TAGS.NODE, TAGS.TAILWIND, TAGS.MONGODB],
    color: "bg-orange",
  },
  {
    title: "Filmmaker",
    key: "filmmaker",
    link: "https://ppaupallares.vercel.app/",
    github: "https://github.com/ssanjua/ssanjua-filmmaker-web",
    image: "/projects/ppau.webp",
    tags: [TAGS.ASTRO, TAGS.NODE, TAGS.NEXT, TAGS.TAILWIND],
    color: "bg-yellow",
  },
  {
    title: "Harvey's",
    key: "harveysApp",
    link: "https://ssanjua.pythonanywhere.com",
    github: "https://github.com/ssanjua/MicaelScott-Harvey_app",
    image: "/projects/harveys.webp",
    tags: [TAGS.PYTHON, TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT],
    color: "bg-red",
  },
];
---

<div class="flex flex-col gap-y-4">
{
  PROJECTS.map(({ title, key, tags, image, link, github }) => (
    <article class="flex flex-col justify-center space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0 p-6">
      <div class="w-full md:w-1/3">
        <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-300 p-2 ease-in-out transform overflow-clip md:group-hover:-translate-y-1">
          <img
            alt={`Project ${title}`}
            class="object-cover object-top w-full h-full transition duration-300 md:group-hover:scale-105"
            src={image}
          />
        </div>
      </div>
      <div class="w-full md:w-2/3 md:max-w-lg">
        <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
          {title}
        </h3>
        <div class="flex flex-wrap mt-2">
          <ul class="flex flex-wrap justify-center mb-2 gap-x-1">
            {tags.map((tag) => (
              <li>
                <span class={`inline-flex m-1 text-xs p-2 ${tag.class}`}>
                  <tag.icon class="size-3.5 mr-1" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
          <div class="mt-2 text-gray-700 dark:text-gray-400">
            {i18n.PROJECTS[key as ProjectKey].description}
          </div>
          <footer class="flex items-end justify-start mt-4 gap-x-4">
            {github && (
              <LinkButton href={github}>
                <GitHubIcon class="size-5" /> Repo
              </LinkButton>
            )}
            {link && (
              <LinkButton href={link}>
                <Link class="size-5" /> Web
              </LinkButton>
            )}
          </footer>
        </div>
      </div>
    </article>
  ))
}


