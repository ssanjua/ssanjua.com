---
import NextjsIcon from "./icons/NextjsIcon.astro";
import TailwindIcon from "./icons/TailwindIcon.astro";
import ReactIcon from "./icons/ReactIcon.astro";
import JavaScriptIcon from "./icons/JavaScriptIcon.astro";
import NodeJsIcon from "./icons/NodeJsIcon.astro";
import MongoDBIcon from "./icons/MongoDBIcon.astro";
import ZodIcon from "./icons/ZodIcon.astro";
import MySQLIcon from "./icons/MySQLIcon.astro";
import GitHubIcon from "./icons/GitHubIcon.astro";
import LinkButton from "./LinkButton.astro";
import Link from "./icons/Link.astro";
import ProjectsIcon from "./icons/ProjectsIcon.astro";
import TypeScriptIcon from "./icons/TypeScriptIcon.astro";
import PythonIcon from "./icons/PythonIcon.astro";
import HTMLIcon from "./icons/HtmlIcon.astro";
import CssIcon from "./icons/CssIcon.astro";

const TAGS = {
  NEXT: {
    name: "Next",
    class: "bg-black/50 text-white",
    icon: NextjsIcon,
  },
  TAILWIND: {
    name: "TailwindCSS",
    class: "bg-[#003159] text-white",
    icon: TailwindIcon,
  },
  REACT: {
    name: "React",
    class: "bg-blue-700/50 text-white",
    icon: ReactIcon,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-yellow-500/20 text-white",
    icon: JavaScriptIcon,
  },
  NODE: {
    name: "Node",
    class: "bg-green-500/20 text-white",
    icon: NodeJsIcon,
  },
  MONGODB: {
    name: "MongoDB",
    class: "bg-green-300/30 text-white",
    icon: MongoDBIcon,
  },
  ZOD: {
    name: "Zod",
    class: "bg-white/20 text-white",
    icon: ZodIcon,
  },
  SQL: {
    name: "PostgreSQL",
    class: "bg-blue-400/50 text-white",
    icon: MySQLIcon,
  },
  TYPESCRIPT: {
    name: "TypeScript",
    class: "bg-blue-800/40 text-white",
    icon: TypeScriptIcon,
  },
  PYTHON: {
    name: "Phyton",
    class: "bg-yellow-800/40 text-white",
    icon: PythonIcon,
  },
  HTML: {
    name: "HTML",
    class: "bg-orange-800/80 text-white",
    icon: HTMLIcon,
  },
  CSS: {
    name: "CSS",
    class: "bg-blue-800/80 text-white",
    icon: CssIcon,
  },
};

const PROJECTS = [
  {
    title: "Bookeando",
    description:
      "Proyecto completo, desde la ideación del backend y frontend. Stripe, Autenticación y testing con e2e",
    link: "https://bookeando.onrender.com/",
    github: "https://github.com/ssanjua/booking-web",
    image: "/projects/bookeando.webp",
    tags: [TAGS.REACT, TAGS.TYPESCRIPT, TAGS.NEXT, TAGS.NODE, TAGS.TAILWIND, TAGS.MONGODB],
  },
  {
    title: "YarcoDelivery",
    description:
      "Aplicación full stack de delivery de comidas con auth0, Stripe para manejar los pagos, perfil de usuario y gestión avanzada. Control de pedidos, de órdenes y menú.",
    link: "https://sanjuan-delivery-app-frontend.onrender.com/",
    github: "https://github.com/ssanjua/sanjuan-delivery-app",
    image: "/projects/yarcoDelivery.webp",
    tags: [TAGS.REACT, TAGS.TYPESCRIPT, TAGS.NEXT, TAGS.NODE, TAGS.TAILWIND, TAGS.MONGODB],
  },
  {
    title: "ShortURL",
    description: "ShotenURL website to help shorten URLS",
    link: "url-shortener-ss.vercel.app/",
    github: "https://github.com/ssanjua/url-shortener",
    image: "/projects/shortURL.webp",
    tags: [TAGS.JAVASCRIPT, TAGS.REACT, TAGS.NEXT, TAGS.ZOD, TAGS.SQL],
  },
  {
    title: "Harveys App",
    description: "Fun App for CS50 final exam",
    link: "ssanjua.pythonanywhere.com",
    github: "https://github.com/ssanjua/MicaelScott-Harvey_app",
    image: "/projects/harveys.webp",
    tags: [ TAGS.PYTHON, TAGS.HTML, TAGS.CSS,  TAGS.JAVASCRIPT],
  },
];
---

<div class="grid md:grid-cols-2 gap-6">
  {
    PROJECTS.map(({ title, description, tags, image, link, github }) => (
      <div class="mb-4">
        <div class="flex items-center mb-4">
          <ProjectsIcon class="mr-4" />
          <h3 class="text-xl font-bold text-white mr-4">{title}</h3>
          <div class="flex gap-3">
            <LinkButton href={github}>
              <GitHubIcon stroke="white" class="size-4 " />
              Code
            </LinkButton>
            <LinkButton href={link}>
              <Link class="size-3" />
              Demo
            </LinkButton>
          </div>
        </div>
        <div class="group relative overflow-hidden rounded-2xl">
          <img
            src={image}
            alt={`Project ${title}`}
            class="w-full object-cover rounded-2xl transition-all duration-300 ease-out group-hover:opacity-80 group-hover:scale-110"
          />
          <div class="absolute inset-0 flex flex-col justify-end p-2 bg-gradient-to-t from-black to-transparent">
            <div class="flex flex-wrap items-center gap-1 mt-2">
              {tags.map((tag) => (
                <span
                  class={`inline-block rounded-full text-xs py-1 px-2 ${tag.class}`}
                >
                  <tag.icon class="inline-block size-3.5" />
                  {tag.name}
                </span>
              ))}
            </div>
            <p class="text-sm mt-3 text-gray-300">{description}</p>
          </div>
        </div>
      </div>
    ))
  }
</div>
