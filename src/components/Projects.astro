---
import NextjsIcon from "./icons/NextjsIcon.astro";
import TailwindIcon from "./icons/TailwindIcon.astro";
import ReactIcon from "./icons/ReactIcon.astro";
import JavaScriptIcon from "./icons/JavaScriptIcon.astro";
import NodeJsIcon from "./icons/NodeJsIcon.astro";
import MongoDBIcon from "./icons/MongoDBIcon.astro";
import ZodIcon from "./icons/ZodIcon.astro";
import MySQLIcon from "./icons/MySQLIcon.astro";
import GitHubIcon from "./icons/GitHubIcon.astro";
import LinkButton from "./LinkButton.astro";
import Link from "./icons/Link.astro";
import TypeScriptIcon from "./icons/TypeScriptIcon.astro";
import PythonIcon from "./icons/PythonIcon.astro";
import HTMLIcon from "./icons/HtmlIcon.astro";
import CssIcon from "./icons/CssIcon.astro";
import Firebase from "./icons/Firebase.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import ExpressIcon from "./icons/ExpressIcon.astro"


import { getI18N } from "../i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

export const TAGS = {
  NEXT: {
    name: "Next",
    class: "bg-black text-white",
    icon: NextjsIcon,
  },
  TAILWIND: {
    name: "TailwindCSS",
    class: "bg-[#003159] text-white",
    icon: TailwindIcon,
  },
  REACT: {
    name: "React",
    class: "bg-blue text-white",
    icon: ReactIcon,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-yellowsm text-blac",
    icon: JavaScriptIcon,
  },
  NODE: {
    name: "Node",
    class: "bg-emerald-800 text-white",
    icon: NodeJsIcon,
  },
  MONGODB: {
    name: "MongoDB",
    class: "bg-lime-700 text-white",
    icon: MongoDBIcon,
  },
  ZOD: {
    name: "Zod",
    class: "bg-cyan-600 text-white",
    icon: ZodIcon,
  },
  SQL: {
    name: "PostgreSQL",
    class: "bg-indigo-700 text-white",
    icon: MySQLIcon,
  },
  TYPESCRIPT: {
    name: "TypeScript",
    class: "bg-sky-600 text-white",
    icon: TypeScriptIcon,
  },
  PYTHON: {
    name: "Phyton",
    class: "bg-amber-700 text-white",
    icon: PythonIcon,
  },
  HTML: {
    name: "HTML",
    class: "bg-orange text-white",
    icon: HTMLIcon,
  },
  CSS: {
    name: "CSS",
    class: "bg-blue text-white",
    icon: CssIcon,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-red text-white",
    icon: AstroIcon,
  },
  FIREBASE: {
    name: "Firebase",
    class: "bg-yellowsm text-black",
    icon: Firebase,
  },
  EXPRESS: {
    name: "Express",
    class: "bg-gris text-white",
    icon: ExpressIcon,
  }
};

type ProjectKey = "bookeando" | "yarcoDelivery" | "filmmaker" | "IndiePodcasts";

const PROJECTS = [
{
    title: "IndiePodcasts",
    key: "IndiePodcasts",
    link: "https://indiepodcasts.vercel.app",
    github: "https://github.com/ssanjua/indie-podcasts",
    image: "/projects/indiePodcasts.webp",
    tags: [ TAGS.REACT, TAGS.NODE, TAGS.FIREBASE, TAGS.MONGODB, TAGS.EXPRESS ],
    color: "bg-red",
  },
  {
    title: "bookeando",
    key: "bookeando",
    link: "https://bookeando.onrender.com/",
    github: "https://github.com/ssanjua/booking-web",
    image: "/projects/bookeando-feed.webp",
    tags: [TAGS.REACT, TAGS.TYPESCRIPT, TAGS.NODE, TAGS.TAILWIND, TAGS.MONGODB],
    color: "bg-pink",
  },
  {
    title: "YarcoDelivery",
    key: "yarcoDelivery",
    link: "https://sanjuan-delivery-app-frontend.onrender.com/",
    github: "https://github.com/ssanjua/sanjuan-delivery-app",
    image: "/projects/yarco-feed.webp",
    tags: [TAGS.REACT, TAGS.TYPESCRIPT, TAGS.NODE, TAGS.TAILWIND, TAGS.MONGODB],
    color: "bg-orange",
  },
  {
    title: "Filmmaker",
    key: "filmmaker",
    link: "https://ppaupallares.vercel.app/",
    github: "https://github.com/ssanjua/ssanjua-filmmaker-web",
    image: "/projects/pp-screenshots.webp",
    tags: [TAGS.ASTRO, TAGS.NODE, TAGS.NEXT, TAGS.TAILWIND],
    color: "bg-yellow",
  },
];

---

<div class="flex flex-col gap-y-12">
{
  PROJECTS.map(({ title, key, tags, image, link, github }) => (
    <article class="flex flex-col justify-start space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0 py-6">
      <div class="w-full md:w-3/5">
        <div class="relative flex flex-col items-center row-span-5 gap-8 transition duration-300 p-2 ease-in-out transform overflow-clip hover:-translate-y-2">
          <img
            alt={`Project ${title}`}
            class="object-cover object-top w-full h-full"
            src={image}
          />
        </div>
      </div>
      <div class="w-full md:w-3/5 md:max-w-lg">
        <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
          {title}
        </h3>
        <div class="flex flex-wrap mt-4">
          <ul class="flex flex-wrap justify-start mb-2 gap-x-1">
            {tags.map((tag) => (
              <li>
                <span class={`inline-flex m-1 text-xs p-2 ${tag.class}`}>
                  <tag.icon class="size-3.5 mr-1" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
          <div class="mt-2 text-sm text-gray-700 dark:text-gray-200">
            {i18n.PROJECTS[key as ProjectKey].description}
          </div>
          <footer class="flex items-end justify-start mt-8 gap-x-4">
            {github && (
              <LinkButton href={github}>
                <GitHubIcon class="size-5" /> Repo
              </LinkButton>
            )}
            {link && (
              <LinkButton href={link}>
                <Link class="size-5" /> Web
              </LinkButton>
            )}
          </footer>
        </div>
      </div>
    </article>
  ))
}