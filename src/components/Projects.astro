---
import NextjsIcon from "./icons/NextjsIcon.astro";
import TailwindIcon from "./icons/TailwindIcon.astro";
import ReactIcon from "./icons/ReactIcon.astro";
import JavaScriptIcon from "./icons/JavaScriptIcon.astro";
import NodeJsIcon from "./icons/NodeJsIcon.astro";
import MongoDBIcon from "./icons/MongoDBIcon.astro";
import ZodIcon from "./icons/ZodIcon.astro";
import MySQLIcon from "./icons/MySQLIcon.astro";
import GitHubIcon from "./icons/GitHubIcon.astro";
import LinkButton from "./LinkButton.astro";
import Link from "./icons/Link.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextjsIcon,
  },
  TAILWIND: {
    name: "TailwindCSS",
    class: "bg-[#003159] text-white",
    icon: TailwindIcon,
  },
  REACT: {
    name: "React",
    class: "bg-blue-700 bg-opacity-50 text-white",
    icon: ReactIcon,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-yellow-500 bg-opacity-20 text-white",
    icon: JavaScriptIcon,
  },
  NODE: {
    name: "Node.js",
    class: "bg-green-500 bg-opacity-20 text-white",
    icon: NodeJsIcon,
  },
  MONGODB: {
    name: "MongoDB",
    class: "bg-green-300 bg-opacity-30 text-white",
    icon: MongoDBIcon,
  },
  ZOD: {
    name: "Zod",
    class: "bg-white bg-opacity-20 text-white",
    icon: ZodIcon,
  },
  SQL: {
    name: "PostgreSQL",
    class: "bg-blue-400 bg-opacity-50 text-white",
    icon: MySQLIcon,
  },
};

const PROJECTS = [
  {
    title: "Bookeando",
    description: "Proyecto completo, desde la ideación del backend y frontend. Stripe, Autenticación y testing con e2e",
    link: "https://bookeando.onrender.com/",
    github: "https://github.com/ssanjua/booking-web",
    image: "/projects/bookeando.webp",
    tags: [TAGS.REACT, TAGS.NEXT, TAGS.NODE, TAGS.TAILWIND, TAGS.MONGODB],
  },
  {
    title: "YarcoDelivery",
    description: "Aplicación full stack de delivery de comidas con auth0, Stripe para manejar los pagos, perfil de usuario y gestión avanzada. Control de pedidos, de órdenes y menú.",
    link: "https://sanjuan-delivery-app-frontend.onrender.com/",
    github: "https://github.com/ssanjua/sanjuan-delivery-app",
    image: "/projects/yarcoDelivery.webp",
    tags: [TAGS.REACT, TAGS.NEXT, TAGS.NODE, TAGS.TAILWIND, TAGS.MONGODB],
  },
  {
    title: "ShortURL",
    description: "ShotenURL website to help shorten URLS",
    link: "url-shortener-ss.vercel.app/",
    github: "https://github.com/ssanjua/url-shortener",
    image: "/projects/shortURL.webp",
    tags: [TAGS.JAVASCRIPT, TAGS.REACT, TAGS.NEXT, TAGS.ZOD, TAGS.SQL],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ title, description, tags, image, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Recién llegado vs 5 años en Nueva Zelanda"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-white dark:text-white">
            {title}
          </h3>

          <div class="mt-2 text-white/80 dark:text-white/90">
              {description}
            </div>
          <div class="flex flex-wrap mt-4">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-2 px-2`}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>
            <footer class="flex items-end justify-start mt-2 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHubIcon stroke="white" class="size-6 " />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
