---
import NextjsIcon from "./icons/NextjsIcon.astro";
import TailwindIcon from "./icons/TailwindIcon.astro";
import ReactIcon from "./icons/ReactIcon.astro";
import JavaScriptIcon from "./icons/JavaScriptIcon.astro";
import NodeJsIcon from "./icons/NodeJsIcon.astro";
import MongoDBIcon from "./icons/MongoDBIcon.astro";
import MySQLIcon from "./icons/MySQLIcon.astro";
import TypeScriptIcon from "./icons/TypeScriptIcon.astro";
import PythonIcon from "./icons/PythonIcon.astro";
import AngularIcon from "./icons/AngularIcon.astro"
import AstroIcon from '../components/icons/AstroIcon.astro';
import HtmlIcon from '../components/icons/HtmlIcon.astro';
import CssIcon from '../components/icons/CssIcon.astro';
import GitIcon from '../components/icons/GitIcon.astro';
import GitHubIcon from '../components/icons/GitHubIconFull.astro';
import MySqlIcon2 from "./icons/MySqlIcon2.astro";

const TAGS = [
    {
        name: "JavaScript",
        icon: JavaScriptIcon,
    },
    {
        name: "Python",
        icon: PythonIcon,
    },
    {
        name: "TypeScript",
        icon: TypeScriptIcon,
    },
    {
        name: "HTML",
        icon: HtmlIcon,
    },
    {
        name: "CSS",
        icon: CssIcon,
    },
    
    {
        name: "TailwindCSS",
        icon: TailwindIcon,
    },
    {
        name: "React",
        icon: ReactIcon,
    },
    {
        name: "Astro",
        icon: AstroIcon,
    },
    {
        name: "Next",
        icon: NextjsIcon,
    },
    {
        name: "Angular",
        icon: AngularIcon,
    },
    {
        name: "Node",
        icon: NodeJsIcon,
    },
    {
        name: "MongoDB",
        icon: MongoDBIcon,
    },
    {
        name: "PostgreSQL",
        icon: MySQLIcon,
    },
    {
        name: "MySQL",
        icon: MySqlIcon2,
    },
    {
        name: "Git",
        icon: GitIcon,
    },
    {
        name: "GitHub",
        icon: GitHubIcon,
    },
    
];
---

    <div  id="tech" class="grid grid-cols-3 md:grid-cols-8 gap-4">
        {
            TAGS.map(({ name, icon: Icon }) => (
                <div class="flex flex-col items-center justify-center text-center p-4 bg-white/15 rounded-lg shadow transition-all duration-300 hover:shadow-2xl hover:bg-white/20 hover:scale-110">
                    <div class="mb-2 transition-all duration-300 hover:scale-110">
                        <Icon class="size-8" />
                    </div>
                    <span class="text-xs font-medium text-white/80">
                        {name}
                    </span>
                </div>
            ))
        }
    </div>

