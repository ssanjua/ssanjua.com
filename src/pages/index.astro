---
import Layout from "../layouts/Layout.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import EducationIcon from "../components/icons/EducationIcon.astro";
import ProjectsIcon from "../components/icons/ProjectsIcon.astro";
import Projects from "../components/Projects.astro";
import TechStackIcon from "../components/icons/TechStackIcon.astro";
import TechStack from "../components/TechStack.astro";
import Hero from "../components/Hero.astro";
---

<Layout
	title="ssanjua - portfolio - full stack web developer"
	description="full stack web developer based in spain, seeking work"
>
	<main>
		<Hero />
		<SectionContainer id="tech">
			<h2 class="flex gap-x-2 items-center text-3xl font-semibold mb-10">
				<TechStackIcon class="size-8" />
				TECH STACK
			</h2>
			<TechStack />
		</SectionContainer>
		<SectionContainer id="projects">
			<h2 class="flex gap-x-2 items-center text-3xl font-semibold mb-10">
				<ProjectsIcon class="size-8" />
				PROYECTS
			</h2>
			<Projects />
		</SectionContainer>
		<SectionContainer id="education">
			<h2 class="flex gap-x-2 items-center text-3xl font-semibold mb-10">
				<EducationIcon class="size-8" />
				EDUCATION
			</h2>
			<Experience />
		</SectionContainer>
	</main>
</Layout>
